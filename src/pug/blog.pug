extends ./index

block title
  title Blog

block content
  include ./blocks/_hero

  +hero('Blog posts', 'Blog')

  main.container.my-md-5.pt-md-5
    section.row.mt-5.pt-1
      .col-12.col-md-8.pl-md-0
        //-  main content - posts
        - var i = 3;
        while i > 0
          - i--
          .card.post.mb-3.mb-md-5.rounded-0.border-0
            img.card-img-top.post-img(src='./img/blog-img-ph.jpg').rounded-0
            .card-body.post__text.mb-md-4
              p.post__info.mt-3
                span.post__date October 15, 2015
                span.post__conversation.ml-3
                  svg.post__icon--comments: use(xlink:href='img/svg-icons.svg#chatbox-working')
                  span.post__comments.mr-2  {8}  
                  svg.post__icon--likes: use(xlink:href='img/svg-icons.svg#ios-heart')
                  span.post__likes  {12}
              h3.post__title.mb-3 THE BIG LEAGUES OUR TURN STRAIGHTNIN
              p.post__summary Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
              a.post__link(href="#") Continue reading
                svg.post__icon--arrow: use(xlink:href='img/svg-icons.svg#arrow-right-c')
      aside.col-12.col-md-3.offset-md-1
        //- form.form-inline
          //- .row.form-group
        input(type="search" placeholder="search...").uppercase.search-field.form-control.rounded-0.aside__search.border-0
            //- button.btn Search
        section.aside__posts.mt-4.pt-3
          h3.aside__title.pt-1.mb-3 Posts
          ul.nav.nav-tabs.aside__tabs#post__tabs(role='tablist')
            li.nav-item.m-0.p-0
              a.px-2.py-3.nav-link.active#latest-tab(data-toggle="tab", href="#latest", role="tab", aria-controls="latest" aria-selected="true").
                Latest
            li.nav-item.m-0.p-0
              a.px-2.py-3.nav-link#popular-tab(data-toggle="tab", href="#popular", role="tab", aria-controls="popular" aria-selected="false").
                Popular
            li.nav-item.m-0.p-0
              a.px-2.py-3.nav-link#comments-tab(data-toggle="tab", href="#comments", role="tab", aria-controls="comments" aria-selected="false").
                Comments
          .tab-content#post__content.py-4
            .tab-pane.fade.show.active#latest(role="tabpanel", aria-labelledby="latest-tab")
              .row.py-1
                .col-4.overflowed
                  img.image-ti(src="./img/blog-img-1.jpg", alt="")
                .col-8
                  h4.ti-title.mb-0 Magna mollis ultricies
                  time(datetime="2012-10-03").ti-date 3th oct 2012
              .row.py-1
                .col-4.overflowed
                  img.image-ti(src="./img/blog-img-2.jpg", alt="")
                .col-8
                  h4.ti-title.mb-0 Magna mollis ultricies
                  time(datetime="2012-10-03").ti-date 3th oct 2012
              .row.py-1
                .col-4.overflowed
                  img.image-ti(src="./img/blog-img-3.jpg", alt="")
                .col-8
                  h4.ti-title.mb-0 Magna mollis ultricies
