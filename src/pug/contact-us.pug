extends ./index

block title
  title Contact Us

block content
  include ./blocks/_hero

  +hero('Contact us', 'Contact')

  .container.my-3.my-md-5.py-md-5
    .row.mt-md-5
      .contact-form.col-md-6.pt-1
        form
          .row.mb-3.pl-md-0
            .form-group.col-md-6.pl-md-0.pr-md-4
              input#userName.form-input.form-control.rounded-0.mb-3(type='text', placeholder='Your name')
            .form-group.col-md-6.pl-md-2
              input#userEmail.form-input.form-control.rounded-0(type='email', placeholder='Your email')
          .row.my-3.pl-md-0
            .form-group.col.pl-md-0
              input#msgObject.form-input.form-control.rounded-0(type='text', placeholder="Object")
          .row.mt-3.pl-md-0
            .form-group.col.pl-md-0
              textarea#msgText.form-input.form-control.rounded-0(name="message", rows="15", placeholder="Message")
          .row.mb-3.pl-md-0.pt-0
            .col-auto.pl-md-0
              button.btn.btn-primary.rounded-0.button.button--wide Send

        .row.mt-5.address
          .col.mt-md-5.pl-md-0
            h3.address__title.mb-4 CONTACT INFO
            p.address__description Lorem ipsum dolor sit amet, conse adipisicing elit. Libero incidunt quod ab mollitia quia dolorum conse.
            address.address__post.pt-1 13D, Functional apartment, Unique colony, 
              br
              | Agadir 86360
              br
              a.address__link(href="tel:+") +212 124-566-780 
              br
              a.address__link(href="tel:+") +212 124-566-780
              br 
              a.address__link.font-weight-bold(href="mailto:") email@website.com
            .row.mt-4.pl-1.mb-md-0.mb-5
              include ./blocks/_social-icons

      .col-md-6.px-0.pl-md-3.pr-md-0
        .map#map.embed-responsive-item.h-100

block additionalJS
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDm8NpbKn9WtvX940ihF4c4lyfsF0SYy04")